<div class="container-fluid">
  <div class="row">
      <div class="col-md-4 border border-3 border-success m-4 mx-auto rounded">
        <h2 class="text-decoration-underline text-center">LOGIN</h2>
          <form id="login-form">
              <div class="mb-3 ">
                <label for="email-login" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
                
              </div>
              <div class="mb-3">
                <label for="password-login" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-login">
              </div>
              <button type="submit" class="btn btn-success d-grid gap-2 col-6 mx-auto mb-3">Login</button>
          </form>
      </div>
      <div class="col-md-4 border border-3 border-success m-4 mx-auto rounded">
        <h2 class="text-decoration-underline text-center">Sign Up</h2>
          <form id="signup-form">
              <div class="mb-3">
                <label for="username-signup" class="form-label">Username</label>
                <input type="text" class="form-control" id="username-signup" aria-label="Username">
                
            </div>
            <div class="mb-3">
                <label for="firstname-signup" class="form-label">First name</label>
                <input type="text" class="form-control" id="firstname-signup" aria-label="Firstname">
                
            </div>
            <div class="mb-3">
                <label for="lastname-signup" class="form-label">Last name</label>
                <input type="text" class="form-control" id="lastname-signup" aria-label="Lastname">
                
            </div>
            
            <div class="mb-3">
                <label for="email-signup" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
                
            </div>
            
            <div class="mb-3">
                <label for="password-signup" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-signup">
            </div>
          
          <button type="submit" class="btn btn-success d-grid gap-2 col-6 mx-auto mb-3">Sign Up</button>
          </form>
      </div>
  </div>
</div>

<script src="/js/login.js"></script>